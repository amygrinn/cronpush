server {
  server_name cronpush.tygr.info;

  root /var/www/cron-push;
  
	location / {
    try_files $uri $uri/index.html $uri.html /index.html;
	}

  location /api/ {
    proxy_pass http://localhost:8000/;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
  }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/cronpush.tygr.info/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/cronpush.tygr.info/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = cronpush.tygr.info) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


  server_name cronpush.tygr.info;

  listen 80;
    return 404; # managed by Certbot


}
